{"components/custom/flooring-calculator":"\n  <div class=\"calculator-section-heading\">\n    <h3>How much do I need?</h3>\n  </div>\n<div class=\"calculator-section-coverage\">\n    {{#each fields}}\n      {{#if name '==' '1 Gallon Kit'}}\n        <div class=\"kit-size\">\n          <img src=\"{{cdn 'img/info-icons/one_gallon_bucket.png'}}\" alt=\"One gallon kit\">\n          <!-- <span class=\"equals\">=</span> -->\n          <img src=\"{{cdn 'img/info-icons/square_footage.png'}}\" alt=\"Square footage icon\">\n          <div class=\"covers\">\n            <p class=\"value\">{{value}}</p>\n            <p>Sq Ft</p>\n          </div>\n        </div>\n      {{/if}}\n      {{#if name '==' '1/2 Gallon Kit'}}\n        <div class=\"kit-size\">\n          <img src=\"{{cdn 'img/info-icons/half_gallon_bucket.png'}}\" alt=\"Half gallon kit\">\n          <!-- <span class=\"equals\">=</span> -->\n          <img src=\"{{cdn 'img/info-icons/square_footage.png'}}\" alt=\"Square footage icon\">\n          <div class=\"covers\">\n            <p class=\"value\">{{value}}</p>\n            <p>Sq Ft</p>\n          </div>\n        </div>\n      {{/if}}\n    {{/each}}\n<div class=\"epoxy-calculator\">\n    <h4>Square Foot Calculator</h4>\n    <!-- length x width inputs -->\n    <div class=\"epoxy-calculator-inputs flex-row\">\n        <div class=\"epoxy-calculator-input\">\n            <label for=\"length\">Length (feet)</label>\n            <input type=\"number\" id=\"length\" name=\"length\" placeholder=\"feet\" />\n        </div>\n        <div class=\"epoxy-calculator-input\">\n            <label for=\"width\">Width (feet)</label>\n            <input type=\"number\" id=\"width\" name=\"width\" placeholder=\"feet\" />\n        </div>\n        <!-- submit and calculate -->\n        <div class=\"epoxy-calculator-submit\">\n            <button class=\"scc-button-action\" id=\"calculate\">Calculate</button>\n        </div>\n        </div>\n        \n        <!-- results -->\n        <div class=\"epoxy-calculator-results flex-row\">\n            <div class=\"epoxy-calculator-results-amount\">\n                <h5>Square Feet: <span id=\"results-square-feet\">0</span></h5>\n            </div>\n            <div class=\"epoxy-calculator-results-amount\">\n                <h5>Gallons Needed: <span id=\"results-gallons\">0</span></h5>\n            </div>\n            <p><em>Length &times; Width &divide; 20 = Gallons</em></p>\n        </div>\n        <script>\n            // get inputs\n            const length = document.getElementById('length');\n            const width = document.getElementById('width');\n            const calculate = document.getElementById('calculate');\n            // get results\n            const resultsSquareFeet = document.getElementById('results-square-feet');\n            const resultsGallons = document.getElementById('results-gallons');\n            // calculate square feet\n            function calculateSquareFeet() {\n                const squareFeet = length.value * width.value;\n                resultsSquareFeet.innerHTML = squareFeet;\n            }\n            // calculate gallons\n            function calculateGallons() {\n                const squareFeet = length.value * width.value;\n                const gallons = squareFeet / 20;\n                resultsGallons.innerHTML = gallons.toFixed(2);\n            }\n            // calculate square feet and gallons\n            function calculateAll() {\n                calculateSquareFeet();\n                calculateGallons();\n            }\n            // calculate on click\n            calculate.addEventListener('click', calculateAll);\n        </script>\n\n</div>\n</div>\n"}
